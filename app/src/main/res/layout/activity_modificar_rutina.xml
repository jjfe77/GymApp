<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModificarRutinaActivity">

    <TextView
        android:text="Selecciona una rutina"
        android:textSize="18sp"
        android:padding="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_ejercicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Spinner
        android:id="@+id/spinnerRutinas"
        android:background="@drawable/bg_ejercicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerEjercicios"
        android:background="@drawable/bg_detalle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/btnAgregarEjercicio"
        android:background="@drawable/bg_boton"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar ejercicio" />

    <Button
        android:id="@+id/btnGuardarCambios"
        android:background="@drawable/bg_boton"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar cambios" />

</LinearLayout>