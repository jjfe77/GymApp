<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ProfesorActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Título -->
            <TextView
                android:background="@drawable/bg_ejercicio"
                android:layout_marginTop="30dp"
                android:text="Bienvenido Profesor"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

            <TextView
                android:text="Alumno"
                android:background="@drawable/bg_ejercicio"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"/>

            <Spinner
                android:id="@+id/spinnerAlumnos"
                android:background="@drawable/bg_detalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/editNombreRutina"
                android:background="@drawable/bg_ejercicio"
                android:hint="Nombre de la rutina"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"/>


            <TextView
                android:text="Ejercicio"
                android:background="@drawable/bg_ejercicio"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"/>

            <Spinner
                android:id="@+id/spinnerEjercicios"
                android:background="@drawable/bg_detalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!-- Campos de series, repeticiones y carga -->
            <EditText
                android:id="@+id/editSeries"
                android:background="@drawable/bg_detalle"
                android:hint="Series"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"/>

            <EditText
                android:id="@+id/editRepeticiones"
                android:background="@drawable/bg_detalle"
                android:hint="Repeticiones"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"/>

            <EditText
                android:id="@+id/editCarga"
                android:background="@drawable/bg_detalle"
                android:hint="Carga (kg)"
                android:inputType="numberDecimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"/>

            <!-- Botón para agregar ejercicio -->
            <Button
                android:id="@+id/btnAgregarEjercicio"
                android:background="@drawable/bg_boton"
                android:text="Agregar ejercicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"/>

            <!-- Lista de ejercicios agregados -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerRutina"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"/>

            <!-- Botón para guardar rutina -->
            <Button
                android:id="@+id/btnGuardarRutina"
                android:background="@drawable/bg_boton"
                android:text="Guardar rutina"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"/>

            <Button
                android:id="@+id/btnCrearEjercicio"
                android:background="@drawable/bg_boton"

                android:text="Crear nuevo ejercicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"/>





            <Button
                android:id="@+id/btnModificarRutina"
                android:background="@drawable/bg_boton"
                android:text="Modificar rutina"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>